{
  "name": "recording-oracle",
  "private": true,
  "description": "HuFi Recording Oracle Server",
  "author": "Human Protocol",
  "license": "AGPL-3.0",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "migration:create": "yarn typeorm migration:create",
    "migration:generate": "yarn typeorm migration:generate -d typeorm-migrations-datasource.ts",
    "migration:revert": "yarn typeorm migration:revert -d typeorm-migrations-datasource.ts",
    "migration:run": "yarn typeorm migration:run -d typeorm-migrations-datasource.ts",
    "migration:show": "yarn typeorm migration:show -d typeorm-migrations-datasource.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/e2e/jest.config.json",
    "typecheck": "tsc --noEmit",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "dependencies": {
    "@human-protocol/logger": "^1.3.0",
    "@human-protocol/sdk": "^6.1.0",
    "@nestjs/common": "^11.1.10",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.10",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.10",
    "@nestjs/schedule": "^6.1.0",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "@valkey/valkey-glide": "^2.2.1",
    "alchemy-sdk": "^3.6.5",
    "axios": "^1.13.4",
    "ccxt": "^4.5.37",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "dayjs": "^1.11.19",
    "decimal.js": "^10.6.0",
    "ethers": "~6.15.0",
    "express": "^5.2.1",
    "graphql": "^16.12.0",
    "graphql-request": "^7.4.0",
    "helmet": "^8.1.0",
    "joi": "^18.0.2",
    "jsonwebtoken": "^9.0.3",
    "lodash": "^4.17.21",
    "lru-cache": "^11.2.6",
    "minio": "^8.0.6",
    "ms": "^2.1.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.28",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@faker-js/faker": "^9.9.0",
    "@golevelup/ts-jest": "^1.1.1",
    "@nestjs/cli": "^11.0.14",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.9",
    "@types/express": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash": "^4.17.21",
    "@types/ms": "^2",
    "@types/node": "^25.2.3",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/pg": "^8.16.0",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.5",
    "globals": "^17.3.0",
    "jest": "^30.2.0",
    "nock": "^14.0.5",
    "prettier": "^3.8.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.55.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "packageManager": "yarn@4.12.0"
}
