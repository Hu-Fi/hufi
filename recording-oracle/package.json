{
  "name": "recording-oracle",
  "private": true,
  "description": "HuFi Recording Oracle Server",
  "author": "Human Protocol",
  "license": "AGPL-3.0",
  "scripts": {
    "clean": "rm -rf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/src/main",
    "lint": "eslint \"{src,test}/**/*.ts\"",
    "lint:fix": "eslint \"{src,test}/**/*.ts\" --fix",
    "migration:create": "yarn typeorm migration:create",
    "migration:generate": "yarn typeorm migration:generate -d typeorm-migrations-datasource.ts",
    "migration:revert": "yarn typeorm migration:revert -d typeorm-migrations-datasource.ts",
    "migration:run": "yarn typeorm migration:run -d typeorm-migrations-datasource.ts",
    "migration:show": "yarn typeorm migration:show -d typeorm-migrations-datasource.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/e2e/jest.config.json",
    "typeorm": "typeorm-ts-node-commonjs"
  },
  "dependencies": {
    "@human-protocol/logger": "^1.1.0",
    "@human-protocol/sdk": "^4.2.0",
    "@nestjs/common": "^11.0.1",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.0",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/terminus": "^11.0.0",
    "@nestjs/typeorm": "^11.0.0",
    "alchemy-sdk": "^3.6.2",
    "ccxt": "^4.4.88",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dayjs": "^1.11.13",
    "ethers": "~6.13.5",
    "express": "^5.1.0",
    "helmet": "^8.1.0",
    "joi": "^17.13.3",
    "lodash": "^4.17.21",
    "lru-cache": "^11.1.0",
    "minio": "^7.1.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "^8.16.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "typeorm": "^0.3.24",
    "typeorm-naming-strategies": "^4.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@faker-js/faker": "^9.8.0",
    "@golevelup/ts-jest": "^0.7.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4",
    "@types/node": "^22.10.7",
    "@types/passport": "^0",
    "@types/passport-jwt": "^4",
    "@types/pg": "^8",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-typescript": "^4.4.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.2.0",
    "jest": "^29.7.0",
    "nock": "^14.0.5",
    "prettier": "^3.4.2",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.33.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "packageManager": "yarn@4.9.1"
}
